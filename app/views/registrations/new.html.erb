<div class="row">
  <div class="col-6 offset-3">
    <%= form_for(registration, url: sign_up_path, method: :post, class: 'form form-horizontal') do |f| %>
      <h3>Registration</h3>
      <div class="form-group">
        <%= f.label :username, required: true %>
        <%= f.text_field :username, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :address, required: true %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email, required: true %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email_confirmation, required: true %>
        <%= f.email_field :email_confirmation, class: 'form-control' %>
      </div>
      <div class="form-check">
        <%= f.check_box :agree_terms, class: 'form-check-input' %>
        <%= f.label :agree_terms, 'I agree to terms of service', required: true %>
      </div>
      <% if flash[:error] %>
        <div class="alert alert-danger" role="alert">
          <%= flash[:error] %>
        </div>
      <% end %>
      <%= f.submit 'Sign me up', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
