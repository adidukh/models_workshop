<div class="row">
  <div class="col-6 offset-3">
    <%= form_for(user, url: sign_in_path, method: :post, class: 'form form-horizontal') do |f| %>
      <div class="form-group">
        <%= f.label :email, class: 'control-label' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <% if flash[:error] %>
        <div class="alert alert-danger" role="alert">
          <%= flash[:error] %>
        </div>
      <% end %>
      <%= f.submit 'Sign me in', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
